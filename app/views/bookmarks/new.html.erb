<div class="banner new-bookmark" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1568876694728-451bbf694b83?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1332&q=80)">
  <div class="container">
    <h1>New Bookmark</h1>
    <br>
    <%= simple_form_for([@list, @bookmark]) do |f| %>
      <%= f.association :movie, as: :select %>
      <%= f.input :comment, placeholder: 'Enter a comment' %>
      <%= f.button :submit, class: "btn btn-ghost" %>
    <% end %>
    <br>
    <%= link_to 'Back to list', list_path(@list), class: "btn btn-ghost" %>
  </div>
</div>
